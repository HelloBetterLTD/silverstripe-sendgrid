{
    "name": "hellobetter/silverstripe-sendgrid",
    "description": "Sendgrid email provider for Silverstripe 5 websites",
    "type": "silverstripe-vendormodule",
    "homepage": "https://github.com/HelloBetterLTD/silverstripe-sendgrid",
    "license": "BSD-3-Clause",
    "keywords": [
        "silverstripe",
        "mailer",
        "sendgrid"
    ],
    "authors": [
        {
            "name": "Nivanka Fonseka",
            "email": "nivanka@hellobetterdigital.com"
        }
    ],
    "require": {
        "php": ">8",
        "silverstripe/framework": "5.*",
        "symfony/http-client": "v7.0.2",
        "symfony/sendgrid-mailer": "v7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "HelloBetter\\SendGridMailer\\": "src/"
        }
    },
    "scripts": {
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
